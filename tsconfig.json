{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es6",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"dom",
			"dom.iterable",
			"es2015",
			"es2015.collection",
			"es2015.core",
			"es2015.generator",
			"es2015.iterable",
			"es2015.promise",
			"es2015.proxy",
			"es2015.reflect",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"es2016",
			"es2016.array.include",
			"es2017",
			"es2017.object",
			"es2017.sharedmemory",
			"es5",
			"es6",
			"es7",
			"esnext",
			"esnext.asynciterable",
			"scripthost",
			"webworker"
		]
	},
	"exclude": [
		"node_modules"
	]
}